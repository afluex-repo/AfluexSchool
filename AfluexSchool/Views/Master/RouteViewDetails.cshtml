@model AfluexSchool.Models.Master

@{
    ViewBag.Title = "RouteViewDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 
@using (Html.BeginForm("RouteViewDetails", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h3><b>Route Details</b></h3>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Vehicle</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">RouteList</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Route Details</a></li>
                </ol>
            </div>
        </div>
        <div class="card shadow">
            <div class="card-body">
                @*<p style="color:red">
                    @TempData["LeaveList"]
                </p>*@
                
                <div class="col-md-12">
                    <a href="/Master/RouteList"><input type="button" class="btn btn-primary" name="Back" id="Back" value="Back To List" /></a>
                </div>

                <div class="table-responsive mt-3">
                    <table id="example5" class="display table" style="min-width:845px">
                        <thead>
                            <tr>
                                <th>Sr.No.</th>
                                <th>Route No</th>
                                <th>Vehicle Type</th>
                                <th>Area Name</th>
                                <th>Amount</th>
                                <th>Pickup Time</th>
                                <th>Drop Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.Arealist != null)
                                {
                                    var i = 1;
                                    foreach (var item in Model.Arealist)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.RouteNo</td>
                                            <td>@item.VehicleType</td>
                                            <td>@item.AreaName</td>
                                            <td>@item.Amount</td>
                                            <td>@item.PickupTime</td>
                                            <td>@item.DropTime</td>
                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
}
