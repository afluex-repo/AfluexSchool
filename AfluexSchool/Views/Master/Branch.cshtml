@model AfluexSchool.Models.Master

@{
    ViewBag.Title = "Branch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Branch", "Master", FormMethod.Post, new { @id = "Branch" }))
{
    <div>
          <div class="login-row">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12 mx-auto align-self-center">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header">
                        <div class="row ">
                            <div class="col-auto">
                                <h4 class="mt-0 mb-1">Branch</h4>
                            </div>
                            <p style="color:red">
                                @TempData["Branch"]
                            </p>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <div class="col-md-12 mx-auto">
                                <div class="row ">
                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group ">
                                            <label> Branch Name <span style="color: red">*</span></label>
                                            @Html.TextBoxFor(m => m.BranchName, new { @class = "form-control", @placeholder = "Branch Name" })

                                            @Html.HiddenFor(m => m.Pk_BranchID, new { @class = "form-control" })
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-left">
                        @if (Model.Pk_BranchID == null)
                        {
                            <input type="submit" class="btn btn-success" value="Save" name="SaveBranch" onclick="return validate();" />
                        }
                        else
                        {
                            <input type="submit" class="btn btn-success" value="Update" name="UpdateBranch" onclick="return validate();" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>


    function validate() {
        $(".errortext").removeClass('errortext');
        if ($("#BranchName").val() == "") {
            $("#BranchName").addClass('errortext');
            $("#BranchName").focus();
            return false;
        }
    }
</script>
