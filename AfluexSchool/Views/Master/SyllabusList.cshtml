@model AfluexSchool.Models.Master

@{
    ViewBag.Title = "SyllabusList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SyllabusList", "Master", FormMethod.Post, new { @id = "SessionList" }))
{
    <div>
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header border-0 bg-none">
                <div class="row">
                    <div class="col-12 col-md">
                        <p class="fs15">Syllabus List</p>
                        <p style="color:red">
                            @TempData["SyllabusList"]
                        </p>
                    </div>

                </div>
            </div>
            <div class="card-body ">
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <div class="row"><div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"></div></div><div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered w-100 mb-0" id="example23">
                                <thead>
                                    <tr>
                                        <th>Sr.No.</th>
                                        <th>Class Name</th>
                                        <th>Section</th>
                                        <th>File</th>
                                        
                                        <th style="display:@ViewBag.IsDelete;">Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.classLst != null)
                                        {
                                            var i = 1;
                                            foreach (var item in Model.classLst)
                                            {
                                                <tr role="row">
                                                    <td>@i</td>
                                                    <td>@item.ClassName</td>
                                                    <td>@item.SectionName</td>
                                                    <td ><a href="@item.Syllabus" target="_blank"><img src="@item.Syllabus" style="height:50px;width:50px;" />  </a>    </td> 
                                                    <td 	style="display:@ViewBag.IsDelete;">
                                                        <a href="/Master/DeletingSyllabus?SyllabusID=@item.SyllabusID" class="btn btn-success btn-sm" onclick="return confirm('Are you sure want to delete?')">Delete</a>

                                                    </td>

                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
}



