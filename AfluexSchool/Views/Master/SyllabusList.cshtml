@model AfluexSchool.Models.Master

@{
    ViewBag.Title = "SyllabusList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("SyllabusList", "Master", FormMethod.Post, new { @id = "SessionList" }))
{
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h3><b>Syllabus List</b></h3>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Masters</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Syllabus List</a></li>
                </ol>
            </div>
        </div>
        <div class="card shadow">
            <div class="card-body">
                <p style="color:red">
                    @TempData["SyllabusList"]
                </p>
                <div class="table-responsive mt-3">
                    <table id="example5" class="display table" style="min-width:845px">
                        <thead>
                            <tr>
                                <th>Sr.No.</th>
                                <th>Class Name</th>
                                <th>Section</th>
                                <th>File</th>
                                <th style="display:@ViewBag.IsDelete;">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.classLst != null)
                                {
                                    var i = 1;
                                    foreach (var item in Model.classLst)
                                    {
                                        <tr role="row">
                                            <td>@i</td>
                                            <td>@item.ClassName</td>
                                            <td>@item.SectionName</td>
                                            <td><a href="@item.Syllabus" target="_blank"><img src="@item.Syllabus" style="height:50px;width:50px;" />  </a>    </td>
                                            <td style="display:@ViewBag.IsDelete;">
                                                <a href="/Master/DeletingSyllabus?SyllabusID=@item.SyllabusID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure want to delete?')">Delete</a>

                                            </td>

                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

}



