@model AfluexSchool.Models.Master

@{
    ViewBag.Title = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fcbdbd !important;
    }
</style>

@using (Html.BeginForm("Department", "Master", FormMethod.Post, new { @id = "Department" }))
{
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h3><b>Department</b></h3>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Masters</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Add Department</a></li>
                </ol>
            </div>
        </div>
        <div class="card shadow">
            <div class="card-body">
                <p style="color:red">
                    @TempData["Department"]
                </p>
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>Department Name<span style="color: red">*</span></label>
                            @Html.TextBoxFor(m => m.DepartmentName, new { @class = "form-control", @placeholder = "Department Name" })
                            @Html.HiddenFor(m => m.PK_DepartmentID, new { @class = "form-control" })
                        </div>
                       
                        <div class="form-group col-md-3">
                            <label class="d-block">&nbsp;</label>
                            @if (Model.PK_DepartmentID == null)
                            {
                                <input type="submit" class="btn btn-success" value="Save" name="SaveDepartment" onclick="return validate();" />
                            }
                            else
                            {
                                <input type="submit" class="btn btn-success" value="Update" name="UpdateDepartment" onclick="return validate();" />
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
}
<script>
   
    function validate() {
        $(".errortext").removeClass('errortext');
        if ($("#DepartmentName").val() == "") {
            $("#DepartmentName").addClass('errortext');
            $("#DepartmentName").focus();
            return false;
        }
    }
</script>

