@model AfluexSchool.Models.Master

@{
    ViewBag.Title = "RouteList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("RouteList", "Master", FormMethod.Post, new { @id = "NoticeList" }))
{
    <div>
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header border-0 bg-none">
                <div class="row">
                    <div class="col-12 col-md">
                        <p class="fs15">Route List</p>
                    </div>
                    <p style="color:red">
                        @TempData["RouteList"]
                    </p>
                </div>
            </div>
            <div class="card-body ">
                <div class="row">

                    <div class="col-md-6">

                        <a href="/Export/ExportToExcel?id=pdf&&PageName=RouteList"><img src="../../AdminPanelcss/assets/img/pdf.png" style="width:40px;height:40px" title="Export To PDF" /></a>
                        <a href="/Export/ExportToExcel?id=excel&&PageName=RouteList"><img src="../../AdminPanelcss/assets/img/excel.jpg" style="width:40px;height:40px" title="Export To Excel" /></a>
                        <a href="/Export/ExportToExcel?id=word&&PageName=RouteList"><img src="../../AdminPanelcss/assets/img/Word.png" style="width:40px;height:40px" title="Export To Word" /></a>
                        <a href="#" onclick="return printData();"><img src="../../AdminPanelcss/assets/img/print.jpg" style="width:40px;height:40px" title="Print" /></a>


                    </div>

                </div>
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <div class="row"><div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"></div></div><div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered w-100 mb-0" id="example24">
                                <thead>
                                    <tr>
                                        <th>Sr.No.</th>
                                        <th>RouteNo                 </th>
                                        <th>VehicleType        </th>
                                        <th>VehicleNo                  </th>
                                        <th>DriverName</th>
                                        <th>DriverContactNo</th>

                                        <th class="station-12">View</th>
                                        <th class="station-12" style="display:@ViewBag.IsDelete;">Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.Arealist != null)
                                        {
                                            var i = 1;
                                            foreach (var item in Model.Arealist)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.RouteNo         </td>
                                                    <td>@item.VehicleType    </td>
                                                    <td>@item.VehicleNo             </td>
                                                    <td>@item.DriverName     </td>
                                                    <td>@item.DriverContactNo </td>
                                                    <td class="station-12">
                                                        <a href="/Master/RouteViewDetails?PK_RouteId=@item.PK_RouteId" class="btn btn-primary btn-sm">View Area</a>

                                                    </td>
                                                    <td class="station-12" style="display:@ViewBag.IsDelete;"><a href="/Master/DeleteRouteList?PK_RouteId=@item.PK_RouteId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure want to delete?')">Delete</a></td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
}

<script src="../../scripts/jquery-1.10.2.min.js"></script>
<script>

    function printData()
    {
        
        var divToPrint = document.getElementById("example24");
        newWin = window.open("");
        newWin.document.write(divToPrint.outerHTML);
        newWin.print();
        newWin.close();
    }
</script>
