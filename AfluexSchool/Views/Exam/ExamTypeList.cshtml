@model AfluexSchool.Models.Exam

@{
    ViewBag.Title = "ExamTypeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ExamTypeList", "Exam", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h3><b>ExamType List</b></h3>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Exam</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">ExamType List</a></li>
                </ol>
            </div>
        </div>
        <div class="card shadow">
            <div class="card-body">
                <p style="color:red">
                    @TempData["ExamTypeList"]
                </p>
                <div class="table-responsive mt-3">
                    <table id="example5" class="display table" style="min-width:845px">
                        <thead>
                            <tr>
                                <th>S No.</th>
                                <th>ExamType Name</th>
                                <th style="display:@ViewBag.IsEdit;">Edit</th>
                                <th style="display:@ViewBag.IsDelete;">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstExamType != null)
                                {
                                    int i = 1;
                                    foreach (var item in Model.lstExamType)
                                    {
                                        <tr>
                                            <td>
                                                @i
                                                @Html.HiddenFor(m => m.Pk_ExamTypeId)
                                            </td>
                                            <td>@item.ExamTypeName</td>
                                            <td style="display:@ViewBag.IsEdit;">
                                                <a href="/Exam/ExamType?Pk_ExamTypeId=@item.Pk_ExamTypeId"><i class="btn btn-success">Edit</i></a>

                                            </td>
                                            <td style="display:@ViewBag.IsDelete;"><a href="/Exam/DeleteExamType?Pk_ExamTypeId=@item.Pk_ExamTypeId" onclick="return confirm('Are you sure want to delete?')"><i class="btn btn-danger">Delete</i></a></td>
                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
}




