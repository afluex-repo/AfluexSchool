@model AfluexSchool.Models.Reports

@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <title>Print Student Fee</title>
    <style>
        table, th, td {
            font-size: medium;
            /*border: 1px solid black;*/
            border-collapse: collapse;
        }

        th, td {
            font-size: medium;
            padding: 5px;
        }
    </style>

</head>
<body>
    <div style="border:3px solid #a20e0e;padding-left:10px;padding-right:10px;">
        <table style="border: 0px none black;">
            <tr style="border: 0px none black;">
                <td style="border: 0px none black;">
                   <img src="../../Websitecss/images/logo.png" />
                </td>
                <td style="border: 0px none black;"></td>

                <td style="border: 0px none black;">
                    <h1 style="color:#a20e0e"></h1>

                </td>
            </tr>

        </table>
        <br />

        <table style="width:100%;background:#a20e0e;color:white;">
            <tr>
                <td style="text-align:center">
                  Mark Sheet
                </td>
            </tr>
        </table>
        <br />

        <table style="width: 100%;" class="table table-striped">
            <tr>
                <td style="border: 1px solid black;"><b></td>
                <td colspan="2" style="border: 1px solid black;"><b>Date :    </b>@DateTime.Now.ToString("dd/MM/yyyy")</td>
                <td style="border: 1px solid black;"><b>School  </b>@ViewBag.CompanyName</td>
            </tr>
        </table>
        <br />
        <table style="width: 100%;" class="table table-striped">

            <tr>
                <td style="border: 1px solid black;" colspan="2"><b>Parent Name  :    </b>@ViewBag.ParentName</td>
                <td style="border: 1px solid black;"><b>Class:  </b>@ViewBag.ClassName - @ViewBag.SectionName</td>
            </tr>
            <tr><td style="border: 1px solid black;"  ><b>Student Name:    </b>@ViewBag.StudentName</td>
                <td style="border: 1px solid black;"  ><b>Exam Type:    </b>@ViewBag.ExamTypeName</td>
            </tr>
            <tr>
                <td colspan="3" style="border: 1px solid black;"><b>Address:    </b>@ViewBag.Address</td>
            </tr>
            <tr>
                <td style="border: 1px solid black;"><b>State:    </b>@ViewBag.State</td>
                <td style="border: 1px solid black;"><b>City:    </b>@ViewBag.City</td>
                <td style="border: 1px solid black;"><b>Pin Code:    </b>@ViewBag.Pincode</td>
            </tr>
        </table>
        <br />
        <table style="width: 100%;" class="table table-striped">


            <tr>
                <td style="border: 1px solid black;"><b>Subject</b></td>
                <td style="border: 1px solid black;"><b>Maximum Marks</b></td>
                <td style="border: 1px solid black;"><b>Obtained Marks</b></td>
                <td style="border: 1px solid black;"><b>Status</b></td>
             
            </tr>

            @if (Model != null)
            {
                if (Model.lstfeedata != null)
                {
                    foreach (var item in Model.lstfeedata)
                    {
                        <tr>
                            <td style="border: 1px solid black;">@item.SubjectName</td>
                            <td style="border: 1px solid black;">@item.MaximumMarks</td> 
                            <td style="border: 1px solid black;">@item.ObtainMarks</td>
                            <td style="border: 1px solid black;">@item.Status</td>
                          
                        </tr>
                    }
                }
            }
             

        </table>

        <br />

         
        <table style="width: 100%;text-align:center">
            <tr>
                <td>

                    <b>LandLine no-</b>@ViewBag.LandLine

                </td>
                <td><b>Contact no-</b>@ViewBag.ContactNo</td>
            </tr>
            <tr>
                <td>
                    <b>Website:</b>   @ViewBag.Website

                </td>
                <td><b>Email : </b>@ViewBag.EmailID</td>
            </tr>
        </table>
        <br />
        <table style="width:100%;background:#a20e0e;color:white;">
            <tr>
                <td style="text-align:center">
                    @ViewBag.CompanyAddress
                </td>
            </tr>
        </table>
        <br />
        <br />

    </div>


   
</body>
</html>