@model AfluexSchool.Models.Master

@{
    ViewBag.Title = "SyllabusList";
    Layout = "~/Views/Shared/_ParentLayout.cshtml";
}

 
@using (Html.BeginForm("SyllabusList", "ParentPanel", FormMethod.Post, new { @id = "SessionList" }))
{

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header">
                        <h4 class="card-title font-weight-bold">Syllabus List</h4>
                        @*<p style="color:red">
                                @TempData["HomeworkList"]
                            </p>*@
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example5" class="display">
                                <thead>
                                    <tr>
                                        <th>Sr.No.</th>
                                        <th>Student </th>
                                        <th>Class Name</th>
                                        <th>Section</th>
                                        <th>File</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.classLst != null)
                                        {
                                            var i = 1;
                                            foreach (var item in Model.classLst)
                                            {
                                                <tr role="row">
                                                    <td>@i</td>
                                                    <td>@item.Name</td>
                                                    <td>@item.ClassName</td>
                                                    <td>@item.SectionName</td>
                                                    <td><a href="@item.Syllabus" target="_blank"><img src="@item.Syllabus" style="height:50px;width:50px;" />  </a>    </td>

                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}



