@model AfluexSchool.Models.Student

@{
    ViewBag.Title = "Homework";
    Layout = "~/Views/Shared/_ParentLayout.cshtml";
}


@using (Html.BeginForm("Homework", "ParentPanel", FormMethod.Post, new { @id = "ReligionList" }))
{


    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-xxl-12 col-md-12">
                <div class="card shadow">
                    <div class="card-header">
                        <h4 class="card-title font-weight-bold">Homework</h4>
                        <p style="color:red">
                            @TempData["Homework"]
                        </p>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            <form>
                                <div class="form-row">
                                    <div class="form-group col-md-3">
                                        <label>Student</label>
                                        @Html.DropDownListFor(m => m.Pk_StudentID, new SelectList(ViewBag.ddlStudent, "Value", "Text"), new { @class = "form-control", @onchange = "return OnchangeSection();" })
                                        @Html.HiddenFor(m => m.Fk_ParentId)
                                    </div>
                                    <div class="form-group  col-md-3">
                                        <label class="d-lg-block d-none">&nbsp;</label>
                                        <input type="submit" class="btn btn-info" name="Search" id="Search" value="Search" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example5" class="display">
                                <thead>
                                    <tr>
                                        <th>Sr.No.</th>
                                        <th>Student Name   </th>
                                        <th>Subject   </th>
                                        <th>ClassName </th>
                                        <th>SectionName </th>
                                        <th>Date </th>
                                        <th>File </th>
                                        <th>Text</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.listStudent != null)
                                        {
                                            var i = 1;
                                            foreach (var item in Model.listStudent)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.studentName   </td>
                                                    <td>@item.SubjectName   </td>
                                                    <td>@item.ClassName          </td>
                                                    <td>@item.SectionName        </td>
                                                    <td>@item.AttendanceDate     </td>
                                                    <td><a href="@item.Status" target="_blank"><img src="@item.Status" style="height:50px;width:50px;" />  </a>    </td>
                                                    @*<td><a href="@item.Status" target="_blank"><img src="@item.Status" style="height:50px;width:50px;" />  </a>    </td>*@
                                                    <td>@(new HtmlString(item.HomeWorkHTML))</td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}


