@model AfluexSchool.Models.Fee

@{
    ViewBag.Title = "FeeStructure";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("FeeStructure", "Fee", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div>
          <div class="login-row">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12 mx-auto align-self-center">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header">
                        <div class="row ">

                            <div class="col-auto">
                                <h4 class="mt-0 mb-1">Fee Structure</h4>

                            </div>
                            <p style="color:red">
                                @TempData["FeeStructure"]
                            </p>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="row justify-content-center">
                            <div class="col-md-12 mx-auto">
                                <div class="row ">
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label>Class <span style="color: red">*</span></label>
                                            @Html.DropDownListFor(m => m.ClassName, new SelectList(ViewBag.ddlClass, "Value", "Text"), new { @class = "form-control" })
                                           
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                          <br/>
                                            <input type="submit" id="btnSave" class="btn btn-success" onclick="return validategetdetilsform();" name="GetDetails" value="GetDetails" />
                                        </div>
                                    </div>
                                </div>
                                @if (Model != null)
                                {
                                    if (Model.lstFeeTypeList != null)
                                    {
                                        int i = 1;
                                    <div class="row" >
                                        <div class="col-sm-12 table-responsive">
                                            <table class="table datatable display responsive w-100 dataTable no-footer dtr-inline">
                                                <thead>
                                                    <tr>
                                                        <th>Fee Structure</th>
                                                       
                                                        <th>Aprl</th>
                                                        <th>May</th>
                                                        <th>June</th>
                                                        <th>July</th>
                                                        <th>Aug</th>
                                                        <th>Sep</th>
                                                        <th>Oct</th>
                                                        <th>Nov</th>
                                                        <th>Dec</th>
                                                        <th>Jan</th>
                                                        <th>Feb</th>
                                                        <th>March</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                   
                                                            @foreach (var item in Model.lstFeeTypeList)
                                                            {
                                                                <tr>

                                                                    <td>
                                                                        @item.FeeTypeName
                                                                        <input type="hidden"  id="PK_FeeTypeID_@i" name="PK_FeeTypeID_@i" value="@item.PK_FeeTypeID" />
                                                                        
                                                                    </td>
                                                                  
                                                                    <td><input type="number"  id="txtApr_@i" name="txtApr_@i" value="@item.Apr"/> </td>
                                                                    <td><input type="number"  id="txtMay_@i" name="txtMay_@i" value="@item.May"/> </td>
                                                                    <td><input type="number"  id="txtJune_@i" name="txtJune_@i" value="@item.June"/> </td>
                                                                    <td><input type="number"  id="txtJuly_@i" name="txtJuly_@i" value="@item.July"/> </td>
                                                                    <td><input type="number"  id="txtAug_@i" name="txtAug_@i" value="@item.Aug"/> </td>
                                                                    <td><input type="number"  id="txtSep_@i" name="txtSep_@i" value="@item.Sep"/> </td>
                                                                    <td><input type="number"  id="txtOct_@i" name="txtOct_@i" value="@item.Oct"/> </td>
                                                                    <td><input type="number"  id="txtNov_@i" name="txtNov_@i" value="@item.Nov"/> </td>
                                                                    <td><input type="number"  id="txtDec_@i" name="txtDec_@i" value="@item.Dec"/> </td>
                                                                    <td><input type="number" id="txtJan_@i" name="txtJan_@i" value="@item.Jan" /> </td>
                                                                    <td><input type="number" id="txtFeb_@i" name="txtFeb_@i" value="@item.Feb" /> </td>
                                                                    <td><input type="number" id="txtMar_@i" name="txtMar_@i" value="@item.Mar" /> </td>
                                                                </tr>
                                                                i++;

                                                            }
                                                            <input type="hidden" id="hdRows" name="hdRows" value="@i" />
                                                    
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>


                                <div class="card-footer text-left" >

                                    @if (Model.Pk_FeeStructureId == null)
                                    {
                                        <input type="submit" id="btnSave" class="btn btn-success" onclick="return validateform();" name="btnSave" value="Save" />
                                    }
                                    else
                                    {
                                        <input type="submit" id="btnUpdate" class="btn btn-success" onclick="return validateformUpdate();" name="btnUpdate" value="Update" />
                                    }


                                </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}


<script>

    function validategetdetilsform()
    {
        $(".errortext").removeClass("errortext");
        if ($('#ClassName').val() == '') {
            $("#ClassName").addClass('errortext');
            $('#ClassName').focus();
            return false;
        }
        $('#feestructurelist').show();
        $('#btnfeestructurelist').show();
    }
    function validateform() {
        $(".errortext").removeClass("errortext");
        
        if ($('#ClassName').val() == '') {
            $("#ClassName").addClass('errortext');
            $('#ClassName').focus();
            return false;
        }
        
        return true;
    }
  
    function isNumberKey(evt) {

        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

</script>
