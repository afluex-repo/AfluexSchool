@model AfluexSchool.Models.Fee

@{
    ViewBag.Title = "FeeTypeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row page-titles mx-0">
        <div class="col-sm-6 p-md-0">
            <div class="welcome-text">
                <h3><b>Fee Type List</b></h3>
            </div>
        </div>
        <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Fee</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Fee Type List</a></li>
            </ol>
        </div>
    </div>
    <div class="card shadow">
        <div class="card-body">
            <p style="color:red">
                @TempData["FeeTypeList"]
            </p>
          
            <div class="table-responsive mt-3">
                <table id="example5" class="display table" style="min-width:845px">
                    <thead>
                        <tr>
                            <th>Sr No.</th>
                            <th>FeeType Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            if (Model.lstFeeTypeList != null)
                            {
                                int i = 1;
                                foreach (var Item in Model.lstFeeTypeList)
                                {
                                    <tr>
                                        <td>
                                            @i
                                            @Html.HiddenFor(m => m.PK_FeeTypeID)
                                        </td>
                                        <td>@Item.FeeTypeName</td>
                                        <td>
                                            <a href="/Fee/FeeType?PK_FeeTypeID=@Item.PK_FeeTypeID" class="btn btn-success">Edit</a>

                                            <a href="/Fee/DeleteFeeType?PK_FeeTypeID=@Item.PK_FeeTypeID" class="btn btn-danger" onclick="return confirm('Are you sure want to delete?')">Delete</a>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

