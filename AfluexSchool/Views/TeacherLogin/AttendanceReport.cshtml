@model AfluexSchool.Models.HRManagement

@{
    ViewBag.Title = "AttendanceReport";
    Layout = "~/Views/Shared/_TeacherLayout .cshtml";
}


@using (Html.BeginForm("AttendanceReport", "TeacherLogin", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
    <div>
          <div class="login-row">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12 mx-auto align-self-center">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header">
                        <div class="row ">

                            <div class="col-auto">
                                <h4 class="mt-0 mb-1">Teacher Attendance Report</h4>

                            </div>
                            <p style="color:red">
                                @TempData["AttendanceReport"]
                            </p>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="row justify-content-center">
                            <div class="col-md-12 mx-auto">
                                <div class="row ">
                                    <div class="col-lg-3 col-md-3">

                                        <div class="form-group">
                                            <label>From Date</label>
                                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "From Date" })
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3">

                                        <div class="form-group">
                                            <label>To Date</label>
                                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "To Date" })
                                        </div>
                                    </div>
                                   
                                    <div class="col-lg-3 col-md-3">
                                        <div class="form-group">
                                            <input type="submit" value="Get Details" class="btn btn-primary" name="Search" onclick="return ValidateSearch();" />
                                        </div>
                                    </div>
                                </div>

                                @if (Model != null)
                {
                    if (Model.lstList != null)
                    {
                                        <div class="row">
                                            <div class="card-body">

                                                <div class="col-md-12">
                                                    <div class="table table-responsive">
                                                        <table class="table datatable display responsive w-100 dataTable no-footer dtr-inline" style="width: 1002px;">
                                                            <thead>
                                                                <tr>

                                                                    <th>Sr.No.</th>
                                                                    <th>Date</th>
                                                                    <th>In Time  </th>
                                                                    <th>Out Time    </th>

                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @if (Model != null)
                                                                {
                                                                    if (Model.lstList != null)
                                                                    {
                                                                        int i = 1;
                                                                        foreach (var item in Model.lstList)
                                                                        {
                                                                            <tr>

                                                                                <td>
                                                                                    @i
                                                                                </td>
                                                                                <td>@item.AttendanceDate   </td>
                                                                                <td>@item.InTime</td>
                                                                                <td>@item.OutTime</td>

                                                                            </tr>
                                                                            i++;
                                                                        }

                                                                    }
                                                                }

                                                            </tbody>

                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

<script src="../../AdminPanelcss/assets/js/jquery-3.3.1.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment-with-locales.min.js"></script>

<script>

    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });
    });


    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
    });


    function ValidateSearch() {

        $(".errortext").removeClass("errortext");
        if ($("#FromDate").val() == "") {
            $("#FromDate").addClass('errortext');
            $("#FromDate").focus();
            return false;
        }
        if ($("#ToDate").val() == "") {
            $("#ToDate").addClass('errortext');
            $("#ToDate").focus();
            return false;
        }
        
        $("#divload").css({ 'display': '' });
        return true;

    }

</script>
