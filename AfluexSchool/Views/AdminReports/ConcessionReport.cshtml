@model AfluexSchool.Models.Reports

@{
    ViewBag.Title = "ConcessionReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 @using (Html.BeginForm("ConcessionReport", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
 {
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h3><b>Concession Fee Report</b></h3>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Reports</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Concession Fee Report</a></li>
                </ol>
            </div>
        </div>
        <div class="card shadow">
            <div class="card-body">
                <p style="color:red">
                    @TempData["ConcessionReport"]
                </p>
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>Session</label>
                            @Html.DropDownListFor(m => m.SessionName, new SelectList(ViewBag.ddlSession, "Value", "Text"), new { @class = "form-control" })
                        </div>
                        <div class="form-group  col-md-3">
                            <label>Login Id</label>
                            @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", placeholder = "Login ID" })
                        </div>
                        <div class="form-group col-md-3">
                            <label>Fee Type</label>
                            @Html.DropDownListFor(m => m.FeeTypeName, new SelectList(ViewBag.ddlfeetype, "Value", "Text"), new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-3">
                            <label>Month</label>
                            @Html.DropDownListFor(m => m.MonthName, new SelectList(ViewBag.ddlmonth, "Value", "Text"), new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-3">
                            <input type="submit" value="Search" name="GetDeatils" id="GetDeatils" class="btn btn-primary" onclick="return favlidate();" />
                        </div>
                    </div>
                </form>

                <div class="table-responsive mt-3">
                    <table id="example5" class="display table" style="min-width:845px">
                        <thead>
                            <tr>
                                <th>S.no</th>
                                <th>Student</th>
                                <th>Class</th>
                                <th>Section</th>
                                <th>Fee Type</th>
                                <th>Month</th>
                                <th>Concession Fee</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstfeedata != null)
                                {
                                    int i = 1;
                                    foreach (var item in Model.lstfeedata)
                                    {
                                        <tr>
                                            <td>
                                                @i
                                            </td>
                                            <td>@item.StudentName (@item.LoginId)</td>
                                            <td>@item.ClassName</td>
                                            <td>@item.SectionName</td>
                                            <td>
                                                @item.FeeTypeName
                                            </td>
                                            <td>
                                                @item.MonthName
                                            </td>
                                            <td>
                                                @item.ConcessionFee
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

 }

