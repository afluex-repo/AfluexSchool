@model AfluexSchool.Models.Reports

@{
    ViewBag.Title = "ConcessionReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 @using (Html.BeginForm("ConcessionReport", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
 {

    <div>
        <div class="login-row">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12 mx-auto align-self-center">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header">
                        <div class="row ">

                            <div class="col-auto">
                                <h4 class="mt-0 mb-1">Concession Fee Report</h4>

                            </div>
                            <p style="color:red">
                                @TempData["ConcessionReport"]
                            </p>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="row justify-content-center">
                            <div class="col-md-12 mx-auto">
                                <div class="row ">
                                    <div class="col-lg-3 col-md-3">
                                        <div class="form-group ">
                                            <label> Session<span style="color: red">*</span></label>
                                            @Html.DropDownListFor(m => m.SessionName, new SelectList(ViewBag.ddlSession, "Value", "Text"), new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3">
                                        <div class="form-group ">
                                            <label> Login Id </label>
                                            @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", placeholder = "Login ID" })
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3">
                                        <div class="form-group ">
                                            <label> Fee Type</label>
                                            @Html.DropDownListFor(m => m.FeeTypeName, new SelectList(ViewBag.ddlfeetype, "Value", "Text"), new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3">
                                        <div class="form-group ">
                                            <label> Month</label>
                                            @Html.DropDownListFor(m => m.MonthName, new SelectList(ViewBag.ddlmonth, "Value", "Text"), new { @class = "form-control" })
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>

                        <div class="card-footer text-left">
                            <input type="submit" value="Search" name="GetDeatils" id="GetDeatils" class="btn btn-primary" onclick="return favlidate();" />

                        </div>
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                            <div class="row"><div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"></div></div><div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered w-100 mb-0" id="example23">
                                        <thead>
                                            <tr>
                                                <th>S.no</th>
                                                <th>Student</th>
                                                <th>Class</th>
                                                <th>Section</th>
                                                <th>Fee Type</th>
                                                <th>Month</th>
                                                <th>Concession Fee</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.lstfeedata != null)
                                                {
                                                    int i = 1;
                                                    foreach (var item in Model.lstfeedata)
                                                    {

                                                        <tr>
                                                            <td>
                                                                @i

                                                            </td>
                                                            <td>@item.StudentName (@item.LoginId)</td>
                                                            <td>@item.ClassName</td>
                                                            <td>@item.SectionName</td>
                                                            <td>
                                                                @item.FeeTypeName
                                                            </td>
                                                            <td>
                                                                @item.MonthName
                                                            </td>
                                                            <td>
                                                                @item.ConcessionFee
                                                            </td>

                                                        </tr>
                                                        i++;
                                                    }
                                                }
                                            }
                                        </tbody>
                                    </table>
                                    <div class="j-response"></div>
                                </div>

                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

 }

