@model AfluexSchool.Models.Reports

@{
    ViewBag.Title = "DeletedFeeReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("DeletedFeeReport", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h3><b>Deleted Fee Report</b></h3>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Reports</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Deleted Fee Report</a></li>
                </ol>
            </div>
        </div>
        <div class="card shadow">
            <div class="card-body">
                @*<p style="color:red">
                    @TempData["LeaveList"]
                </p>*@
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>Login ID</label>
                            @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", placeholder = "Login ID" })
                        </div>
                        <div class="form-group  col-md-3">
                            <label>Student Name</label>
                            @Html.TextBoxFor(m => m.StudentName, new { @class = "form-control", placeholder = "Student Name" })
                        </div>
                        <div class="form-group col-md-3">
                            <label>Receipt No</label>
                            @Html.TextBoxFor(m => m.ReceiptNo, new { @class = "form-control", placeholder = "ReceiptNo" })
                        </div>
                        <div class="form-group col-md-3">
                            <label>From Payment Date</label>
                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", placeholder = "FromDate" })
                        </div>
                        <div class="form-group col-md-3">
                            <label>To Payment Date</label>
                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", placeholder = "ToDate" })
                        </div>
                        <div class="form-group col-md-3">
                            <label>From Deleted Date</label>
                            @Html.TextBoxFor(m => m.FromDeletedDate, new { @class = "form-control", placeholder = "FromDeletedDate" })
                        </div>
                        <div class="form-group col-md-3">
                            <label>To Deleted Date</label>
                            @Html.TextBoxFor(m => m.ToDeletedDate, new { @class = "form-control", placeholder = "ToDeletedDate" })
                        </div>
                        <div class="form-group col-md-3">
                            <label class="d-block">&nbsp;</label>
                            <input type="submit" value="Search" name="GetDeatils" id="GetDeatils" class="btn btn-primary" onclick="return favlidate();" />
                        </div>
                    </div>
                </form>

                <div class="table-responsive mt-3">
                    <table id="example5" class="display table" style="min-width:845px">
                        <thead>
                            <tr>
                                <th>S.No</th>
                                <th>LoginId</th>
                                <th>Student Name</th>
                                <th>Receipt No</th>
                                <th>Payment Date</th>
                                <th>Fee Amount</th>
                                <th>Late Fee</th>
                                <th>Concession Fee</th>
                                <th>Discount</th>
                                <th>Paid Amount</th>
                                <th>DeletedBy</th>
                                <th>DeletedOn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstfeedata != null)
                                {
                                    int i = 1;
                                    foreach (var item in Model.lstfeedata)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.LoginId</td>
                                            <td>@item.StudentName</td>
                                            <td>@item.ReceiptNo</td>
                                            <td>@item.PaymentDate</td>
                                            <td>@item.FeeAmount</td>
                                            <td>@item.LateFee</td>
                                            <td>@item.ConcessionFee</td>
                                            <td>@item.Discount</td>
                                            <td>@item.PaidAmount</td>
                                            <td>@item.DeletedBy</td>
                                            <td>@item.DeletedOn</td>
                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

}


<script src="../../scripts/jquery-1.10.2.min.js"></script>
<script src="../../Scripts/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">



<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
    });

    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
    });
    $('#FromDeletedDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
    });

    $('#ToDeletedDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
    });


</script>