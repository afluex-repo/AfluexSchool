@model AfluexSchool.Models.Reports

@{
    ViewBag.Title = "EnquiryReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("EnquiryReport", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{


    <div>
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header border-0 bg-none">
                <div class="row">
                    <div class="col-12 col-md">
                        <p class="fs15">Enquiry Report</p>
                    </div>
                    <p style="color:red">
                        @TempData["EnquiryReport"]
                    </p>
                </div>
            </div>
            <div class="card-body ">


                <div class="col-sm-12 table-responsive">
                    <table class="table datatable display responsive w-100 dataTable no-footer dtr-inline" id="example23">

                        <thead>
                            <tr>
                                <th>S.no</th>
                                <th>ParentName    </th>
                                <th>StudentName    </th>

                                <th>Class Name</th>
                                <th>Previous School   </th>
                                <th>Mobile   </th>

                                <th>Email</th>
                                <th>Address</th>
                                <th>Enquiry Date</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.listEnquiry != null)
                                {
                                    int i = 1;
                                    foreach (var item in Model.listEnquiry)
                                    {

                                        <tr>
                                            <td>
                                                @i
                                            </td>
                                            <td>@item.ParentName</td>
                                            <td>
                                                @item.StudentName
                                            </td>
                                            


                                            <td>
                                                @item.ClassName
                                            </td>
                                            <td>
                                                @item.PreviousSchool
                                            </td>
                                            <td>
                                                @item.Mobile
                                            </td>
                                            <td>
                                                @item.Email
                                            </td>
                                            <td>
                                                @item.Address
                                            </td>
                                            <td>
                                                @item.AddedOn
                                            </td>
                                            <td>
                                                <img src="@item.Image" id="img" height="100" width="100">

                                            </td>
                                            <td>
                                                <a href="/AdminReports/DeleteEnquiry?Pk_EnquiryId=@item.Pk_EnquiryId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure want to delete?')">Delete</a>

                                            </td>

                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                    <div class="j-response"></div>
                </div>

            </div>
        </div>
    </div>




}

<script src="../../scripts/jquery-1.10.2.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment-with-locales.min.js"></script>


<script>
    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });


    });

</script>
