@model AfluexSchool.Models.HRManagement

@{
    ViewBag.Title = "AttendanceReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("AttendanceReport", "HRManagement", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data",@autocomplete="off" }))
{
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h3><b>Teacher Attendance Report</b></h3>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">HR</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Teacher Attendance Report</a></li>
                </ol>
            </div>
        </div>
        <div class="card shadow">
            <p style="color:red">
                @TempData["AttendanceReport"]
            </p>
            <div class="card-body">
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>Employee</label>
                            @Html.TextBoxFor(m => m.EmployeeCode, new { @class = "form-control", @Placeholder = "Employee Code" })
                        </div>
                        <div class="form-group col-md-3">
                            <label>From Date</label>
                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", placeholder = "From Date" })
                        </div>
                        <div class="form-group col-md-3">
                            <label>To Date</label>
                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", placeholder = "To Date" })
                        </div>
                        <div class="form-group col-md-3">
                            <label class="d-block">&nbsp;</label>
                            <input type="submit" value="Get Details" class="btn btn-primary d-block" name="Search" onclick="return ValidateSearch();" />
                        </div>
                    </div>
                </form>


            @if (Model != null)
            {
                if (Model.lstList != null)
                {
                <div class="table-responsive mt-3">
                    <table id="example5" class="display table" style="min-width:845px">
                        <thead>
                            <tr>
                                <th>Sr.No.</th>
                                <th>Teacher</th>
                                <th>Date</th>
                                <th>In Time</th>
                                <th>Out Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstList != null)
                                {
                                    int i = 1;
                                    foreach (var item in Model.lstList)
                                    {
                                        <tr>
                                            <td>
                                                @i
                                            </td>
                                            <td>@item.DisplayName</td>
                                            <td>@item.AttendanceDate</td>
                                            <td>@item.InTime</td>
                                            <td>@item.OutTime</td>
                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>

                </div>
              }
         }

            </div>
        </div>
    </div>

    
}

