@model AfluexSchool.Models.Master

@{
    ViewBag.Title = "BranchList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("BranchList", "Master", FormMethod.Post, new { @id = "BranchList" }))
{
    <div>
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header border-0 bg-none">
                <div class="row">
                    <div class="col-12 col-md">
                        <p class="fs15">Branch List</p>
                        <p style="color:red">
                            @TempData["BranchList"]
                        </p>
                    </div>

                </div>
            </div>
            <div class="card-body ">
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <div class="row"><div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"></div></div><div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered w-100 mb-0" id="example23">
                                <thead>
                                    <tr>
                                        <th>Sr.No.</th>
                                        <th>Branch Name</th>
                                        <th style="display:@ViewBag.IsEdit;">Edit</th>
                                        <th style="display:@ViewBag.IsDelete;">Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.BranchLst != null)
                                        {
                                            var i = 1;
                                            foreach (var item in Model.BranchLst)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.BranchName</td>
                                                    <td style="display:@ViewBag.IsEdit;">
                                                        <a href="/Master/Branch?Pk_BranchID=@item.Pk_BranchID" class="btn btn-success btn-sm">Edit</a>
                                                    </td>
                                                    <td style="display:@ViewBag.IsDelete;"><a href="/Master/DeleteBranch?Pk_BranchID=@item.Pk_BranchID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure want to delete?')">Delete</a></td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
}