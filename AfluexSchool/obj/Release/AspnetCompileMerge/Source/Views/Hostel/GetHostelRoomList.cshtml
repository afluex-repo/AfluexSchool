@model AfluexSchool.Models.Hostel

@{
    ViewBag.Title = "GetHostelRoomList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("GetHostelRoomList", "Hostel", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{

<div class="container main-container" id="main-container">
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header border-0 bg-none">
            <div class="row">
                <div class="col-12 col-md">
                    <p class="fs15">Hostel Room List</p>
                </div>
                <p style="color:red">
                    @TempData["GetHostelRoomList"]
                </p>
            </div>
        </div>
        <div class="card-body ">

            <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                <div class="row"><div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"></div></div><div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered w-100 mb-0" id="example23">
                            <thead>
                                <tr>
                                    <th>S No.</th>
                                    <th>Hostel Type Name</th>
                                    <th>Hostel Name</th>
                                    <th>Floor Name</th>
                                    <th> Room</th>
                                   
                                    
                                    <th style="display:@ViewBag.IsDelete;">Delete</th>
                                </tr>

                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.lstHostel != null)
                                    {
                                        int i = 1;
                                        foreach (var item in Model.lstHostel)
                                        {
                                            <tr>
                                                <td>
                                                    @i
                                                </td>
                                                <td>@item.TypeName  </td>
                                                <td>@item.HostelName</td>
                                                <td>@item.FloorName </td>
                                                <td>@item.FromRoom </td>
                                                 
                                                <td style="display:@ViewBag.IsDelete;">
                                                 @*   <a href="/Hostel/HostelRoom?Pk_HostelRoomId=@item.Pk_HostelRoomId"><i class="btn btn-success">Edit</i></a>*@

                                                    <a href="/Hostel/DeleteHostelRoom?Pk_HostelRoomId=@item.Pk_HostelRoomId" onclick="return confirm('Are you sure want to delete?')"><i class="btn btn-danger">Delete</i></a>

                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                        <div class="j-response"></div>
                    </div>

                </div>
            </div>
        </div>

    </div>

</div>

}
<script src="../../scripts/jquery-1.10.2.min.js"></script>



