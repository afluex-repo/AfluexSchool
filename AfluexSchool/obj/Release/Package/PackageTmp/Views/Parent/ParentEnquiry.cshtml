@model AfluexSchool.Models.Parent

@{
    ViewBag.Title = "ParentEnquiry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="../../Autofill/jquery-ui.css" rel="stylesheet" />
<br />
@using (Html.BeginForm("ParentEnquiry", "Parent", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{

    <div>
          <div class="login-row">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12 mx-auto align-self-center">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header">
                        <div class="row ">

                            <div class="col-auto">
                                <h4 class="mt-0 mb-1">Parent Inquiry</h4>

                            </div>
                            <p style="color:red">
                                @TempData["ParentEnquiry"]
                            </p>
                        </div>
                    </div>
                    <div class="card-body">

                         
                        <div class="row justify-content-center">
                            <div class="col-md-12 mx-auto">

                                @if (Model.Pk_ParentID != null)
                                {
                                    <div class="row ">
                                        <div class="col-lg-4 col-md-4">
                                            <div class="form-group ">
                                                <label>Parent Login Id <span style="color: red">*</span></label>
                                                @Html.TextBoxFor(m => m.LoginID, new { @class = "form-control", @Placeholder = "Parent Login Id", @readonly = "readonly" })

                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-4">
                                            <div class="form-group ">
                                                <label>Parent Name <span style="color: red">*</span></label>
                                                @Html.TextBoxFor(m => m.ParentName, new { @class = "form-control", @Placeholder = "Parent Name", @readonly = "readonly" })
                                                @Html.HiddenFor(m => m.Pk_ParentID)
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-4">
                                            <div class="form-group ">
                                                <label>Mobile <span style="color: red">*</span></label>
                                                @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @Placeholder = "Mobile", @maxlength = "10", @onkeypress = "return isNumberKey(event);", @readonly = "readonly" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            <div class="form-group ">
                                                <label>Address  </label>
                                                @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @Placeholder = "Address", @readonly = "read" })
                                            </div>
                                        </div>

                                    </div>
                                }

                                else
                                {
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6">
                                            <div class="form-group ">
                                                <label>Parent Name <span style="color: red">*</span></label>
                                                @Html.TextBoxFor(m => m.ParentName, new { @class = "form-control", @Placeholder = "Parent Name" })
                                                @Html.HiddenFor(m => m.Pk_ParentID)
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6">
                                            <div class="form-group ">
                                                <label>Mobile <span style="color: red">*</span></label>
                                                @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @Placeholder = "Mobile", @maxlength = "10", @onkeypress = "return isNumberKey(event);" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            <div class="form-group ">
                                                <label>Address  </label>
                                                @Html.TextAreaFor(m => m.Address, new { @class = "form-control", @Placeholder = "Address" })
                                            </div>
                                        </div>

                                    </div>

                                }




                                <div class="row">
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label>Student Name  <span style="color: red">*</span></label>
                                            @Html.TextBoxFor(m => m.StudentName, new { @class = "form-control", @Placeholder = "Student Name" })

                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label> Class <span style="color: red">*</span></label>
                                            @Html.DropDownListFor(m => m.Fk_ClassID, new SelectList(ViewBag.ddlclass, "Value", "Text"), new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label>Form No<span style="color: red">*</span></label>
                                            @Html.TextBoxFor(m => m.FormNo, new { @class = "form-control", @Placeholder = "Form No" })
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <div class="form-group ">
                                            <label>Amount<span style="color: red">*</span></label>
                                            @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @Placeholder = "Amount", @onkeypress = "return isNumberKey(event);" })

                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer text-left">
                                    @if (Model.Pk_ParentID == null)
                                    {
                                        <input class="btn btn-primary" type="submit" onclick="return validateform();" name="btnsave" value="Save" id="btnSave" />

                                        <input class="btn btn-primary" type="submit" onclick="return validateform();" name="btnprint" value="Save and Print" id="btnprint" />
                                    }
                                    else
                                    {
                                        <input class="btn btn-primary" type="submit" onclick="return validateform();" name="btnSaveNew" value="Save" id="btnSaveNew" />

                                        <input class="btn btn-primary" type="submit" onclick="return validateform();" name="btnprintNew" value="Save and Print" id="btnprintNew" />
                                    }
                                </div>

                            </div>
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>

}
<script src="../../scripts/jquery.min.js"></script>



<script>

    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });


    });




    function validateform() {
        $(".errortext").removeClass("errortext");
        if ($('#ParentName').val() == '') {
            $("#ParentName").addClass('errortext');
            $('#ParentName').focus();
            return false;
        }

        if ($('#Mobile').val() == '') {
            $("#Mobile").addClass('errortext');
            $('#Mobile').focus();
            return false;
        }
        if ($('#StudentName').val() == '') {
            $("#StudentName").addClass('errortext');
            $('#StudentName').focus();
            return false;
        }
        
        if ($('#Fk_ClassID').val() == '0') {
            $("#Fk_ClassID").addClass('errortext');
            $('#Fk_ClassID').focus();
            return false;
        }
        if ($('#FormNo').val() == '') {
            $("#FormNo").addClass('errortext');
            $('#FormNo').focus();
            return false;
        }

        if ($('#Amount').val() == '') {
            $("#Amount").addClass('errortext');
            $('#Amount').focus();
            return false;
        }

        return true;
    }




    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }


</script>


