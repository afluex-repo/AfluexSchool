@model AfluexSchool.Models.Fee

@{
    ViewBag.Title = "FeeTypeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container main-container" id="main-container">
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header border-0 bg-none">
            <div class="row">
                <div class="col-12 col-md">
                    <p class="fs15">Fee Type</p>

                </div>

            </div>
        </div>
        <div class="card-body ">
            <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                <div class="row"><div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"></div></div><div class="row">
                    <div class="col-sm-12">
                        <table class="table table-bordered w-100 mb-0" id="example23">
                            <thead>
                                <tr>
                                    <th>Sr No.</th>
                                    <th>FeeType Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                               @if (Model != null)
                               {
                                   if (Model.lstFeeTypeList != null)
                                   {
                                       int i = 1;
                                       foreach (var Item in Model.lstFeeTypeList)
                                       {
                                        <tr class="text-left">

                                            <td>
                                                @i
                                                @Html.HiddenFor(m => m.PK_FeeTypeID)


                                            </td>
                                            <td>@Item.FeeTypeName</td>
                                            <td>
                                                <a href="/Fee/FeeType?PK_FeeTypeID=@Item.PK_FeeTypeID" class="btn btn-success">Edit</a>
                                             
                                                 <a href="/Fee/DeleteFeeType?PK_FeeTypeID=@Item.PK_FeeTypeID" class="btn btn-danger" onclick="return confirm('Are you sure want to delete?')">Delete</a>



                                            </td>

                                        </tr>
                                           i++;
                                       }

                                   }
                               }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>



