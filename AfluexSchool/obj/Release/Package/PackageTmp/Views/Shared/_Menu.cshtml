@model AfluexSchool.Models.Home

<div class="sidebar">
    <!-- Logo sidebar -->
    <a href="#" class="logo">
        <img src="../../Websitecss/images/favicon.png" alt="" class="logo-icon">
        <div class="logo-text">
            <h5 class="fs22 mb-0">@Session["FullName"] </h5>
            <p class="text-uppercase fs11">Admin Dashboard</p>
        </div>
    </a>


    @if (Model != null)
    {
        if (Model.lstMenu != null)
        {

            foreach (var item in Model.lstMenu)
            {
                <ul class="nav flex-column">
                    <li class="nav-item dropdown">
                        @if (item.Url == "#")
                        {
                            <a class="nav-link dropdown-toggle" href="@item.Url"><i class="@item.Icons"></i> <span>@item.MenuName</span> <i class="material-icons arrow">expand_more</i></a>

                        }
                        else
                        {
                            <a class="nav-link dropdown-toggle" href="@item.Url"><i class="@item.Icons"></i> <span>@item.MenuName</span> </a>
                        }
                        @if (item.Url == "#")
                        {
                            <div class="nav flex-column">
                                @foreach (var item1 in Model.lstsubmenu)
                                {
                                    if (item1.MenuId == item.MenuId)
                                    {
                                        <div class="nav-item"><a class="nav-link" href="@item1.Url"><span>@item1.SubMenuName</span></a></div>
                                    }
                                }
                            </div>
                        }
                    </li>
                </ul>
            }
        }
    }


    <br>


</div>