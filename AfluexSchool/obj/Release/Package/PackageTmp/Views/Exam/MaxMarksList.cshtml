@model AfluexSchool.Models.Exam

@{
    ViewBag.Title = "MaxMarksList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("MaxMarksList", "Exam", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div>
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header border-0 bg-none">
                <div class="row">
                    <div class="col-12 col-md">
                        <p class="fs15">Max/Passing Marks List</p>
                    </div>
                    <p style="color:red">
                        @TempData["GetMaxMarksList"]
                    </p>
                </div>
            </div>
            <div class="card-body ">

                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <div class="row"><div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"></div></div><div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered w-100 mb-0" id="example23">
                                <thead>
                                    <tr>

                                        <th>S No.</th>
                                        <th>ClassName</th>
                                        <th>ExamTypeName</th>

                                        <th>Max Marks</th>
                                        <th style="display:@ViewBag.IsEdit;">Edit</th>
                                        <th style="display:@ViewBag.IsDelete;">Delete</th>

                                    </tr>

                                </thead>
                                <tbody>
                                   @if (Model != null)
                                   {
                                       if (Model.lstMaxMarks != null)
                                       {
                                           int i = 1;
                                           foreach (var item in Model.lstMaxMarks)
                                           {
                                            <tr>
                                                <td>
                                                    @i


                                                </td>
                                                <td>@item.ClassName</td>
                                                <td>@item.ExamTypeName</td>

                                                <td>@item.MaxMarksExam</td>
                                                <td style="display:@ViewBag.IsEdit;">

                                                    <a href="/Exam/MaxMarksMaster?Pk_MaxMarksId=@item.Pk_MaxMarksId"><i class="btn btn-success btn-sm">Edit</i></a>
                                                     
                                                </td>
                                                <td style="display:@ViewBag.IsDelete;"><a href="/Exam/DeleteMaxMarks?Pk_MaxMarksId=@item.Pk_MaxMarksId" onclick="return confirm('Are you want to delete?')"><i class="btn btn-danger btn-sm">Delete</i></a></td>
                                            </tr>
                                               i++;
                                           }
                                       }
                                   }
                                </tbody>
                            </table>
                            <div class="j-response"></div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>
}
