@model AfluexSchool.Models.Master

@{
    ViewBag.Title = "Branch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .errortext{
        border:1px solid red!important;
        background-color:#fcbdbd!important;
    }
</style>

@using (Html.BeginForm("Branch", "Master", FormMethod.Post, new { @id = "Branch" }))
{
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h3><b>Branch</b></h3>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Leave</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Add Branch</a></li>
                </ol>
            </div>
        </div>
        <div class="card shadow">
            <div class="card-body">
                <p style="color:red">
                    @TempData["Branch"]
                </p>
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Branch Name<span style="color: red">*</span></label>
                            @Html.TextBoxFor(m => m.BranchName, new { @class = "form-control", @placeholder = "Branch Name" })
                            @Html.HiddenFor(m => m.Pk_BranchID, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-3">
                            <label class="d-block">&nbsp;</label>
                            @if (Model.Pk_BranchID == null)
                            {
                                <input type="submit" class="btn btn-success" value="Save" name="SaveBranch" onclick="return validate();" />
                            }
                            else
                            {
                                <input type="submit" class="btn btn-success" value="Update" name="UpdateBranch" onclick="return validate();" />
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
}

<script>


    function validate() {
        $(".errortext").removeClass('errortext');
        if ($("#BranchName").val() == "") {
            $("#BranchName").addClass('errortext');
            $("#BranchName").focus();
            return false;
        }
    }
</script>
