@model AfluexSchool.Models.Master

@{
    ViewBag.Title = "SubjectMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .errortext{
        border:1px solid red!important;
        background-color:#facfcf!important;
    }
</style>

@using (Html.BeginForm("SubjectMaster", "Master", FormMethod.Post, new { @id = "SubjectMaster" }))
{
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h3><b>Subject Master</b></h3>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Masters</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Add Subject</a></li>
                </ol>
            </div>
        </div>
        <div class="card shadow">
            <div class="card-body">
                <p style="color:red">
                    @TempData["SubjectMaster"]
                </p>
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Subject Name<span style="color: red">*</span></label>
                            @Html.TextBoxFor(m => m.SubjectName, new { @class = "form-control", @placeholder = "Subject Name" })
                            @Html.HiddenFor(m => m.Pk_SubjectId, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-3">
                            <label class="d-block">&nbsp;</label>
                            @if (Model.Pk_SubjectId == null)
                            {
                                <input type="submit" class="btn btn-success" value="Save" name="SaveSubjectMaster" onclick="return validate();" />
                            }
                            else
                            {
                                <input type="submit" class="btn btn-success" value="Update" name="UpdateSubjectMaster" onclick="return validate();" />
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
}
<script>
    function validate() {
        $(".errortext").removeClass('errortext');
        if ($("#SubjectName").val() == "") {
            $("#SubjectName").addClass('errortext');
            $("#SubjectName").focus();
            return false;
        }
    }
</script>
