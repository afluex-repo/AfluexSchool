@model AfluexSchool.Models.Master

@{
    ViewBag.Title = "Syllabus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Syllabus", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h3><b>Syllabus</b></h3>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Masters</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Syllabus</a></li>
                </ol>
            </div>
        </div>
        <div class="card shadow">
            <div class="card-body">
                <p style="color:red">
                   @TempData["Syllabus"]
                </p>
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>Class<span style="color: red">*</span></label>
                            @Html.DropDownListFor(m => m.Fk_ClassID, new SelectList(ViewBag.ddlclass, "Value", "Text"), new { @class = "form-control", @onchange = "return OnchangeSection();" })
                        </div>
                        <div class="form-group col-md-4">
                            <label>Section<span style="color: red">*</span></label>
                            @Html.DropDownListFor(m => m.Fk_SectionID, new SelectList(ViewBag.ddlsection, "Value", "Text"), new { @class = "form-control", @onchange = "return onDDLchange()" })
                        </div>
                        <div class="form-group col-md-3">
                            <label>Upload Syllabus <span style="color: red">*</span></label>
                            <input type="file" name="Syllabus" class="bg-default form-control" id="Syllabus" />
                        </div>
                        <div class="form-group col-md-3">
                            <input class="btn btn-primary" type="submit" name="btnSave" onclick="return validateform()" value="Save" id="btndetail" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

}
    
    <script>
        $(document).ready(function () {
            $("#divload").css({ 'display': 'none' });

        });

        function OnchangeSection() {
            var value = $('#Fk_ClassID').val();
            $.ajax({
                url: "/Master/GetSectionByClass",
                Type: "Get",
                DataType: "JSON",
                data: { Pk_ClassId: value },
                success: function (data) {

                    $("#Fk_SectionID").html("");
                    $("#Fk_SectionID").empty();
                    $("#Fk_SectionID").append(
                          $('<option></option>').val(0).html('--Select Section--'));
                    $.each(data.ddlSectionName, function (index, Sectioncount) {
                        $("#Fk_SectionID").append(
                              $('<option></option>').val(Sectioncount.Value).html(Sectioncount.Text));

                    });


                }
            });

        }
        function validateform() {
            $(".errortext").removeClass("errortext");

            if ($('#Fk_ClassID').val() == '0') {
                $("#Fk_ClassID").addClass('errortext');
                $('#Fk_ClassID').focus();
                return false;
            }

            if ($('#Fk_SectionID').val() == '0') {
                $("#Fk_SectionID").addClass('errortext');
                $('#Fk_SectionID').focus();
                return false;
            }

            if ($('#Syllabus').val() == '') {
                $("#Syllabus").addClass('errortext');
                $('#Syllabus').focus();
                return false;
            }

            return true;
        }

    </script>

    <style>
        .errortext {
            border: 1px solid red !important;
            background-color: #fff0f0 !important;
        }
    </style>

