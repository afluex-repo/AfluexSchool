@model AfluexSchool.Models.Master

@{
    ViewBag.Title = "VehicleType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .errortext{
        border:1px solid red!important;
        background-color:#fac0c0!important;
    }
</style>

@using (Html.BeginForm("VehicleType", "Master", FormMethod.Post, new { @id = "VehicleTypeMasters" }))
{
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h3><b>Vehicle Type</b></h3>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Vehicle</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Vehicle Type</a></li>
                </ol>
            </div>
        </div>
        <div class="card shadow">
            <div class="card-body">
                <p style="color:red">
                    @TempData["VehicleType"]
                </p>
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Vehicle Type<span style="color: red">*</span></label>
                            @Html.TextBoxFor(m => m.VehicleType, new { @class = "form-control", @placeholder = "Vehicle Type" })
                            @Html.HiddenFor(m => m.PK_VehicleTypeID, new { @class = "form-control" })
                        </div>
                        <div class="form-group col-md-3">
                            <label class="d-block">&nbsp;</label>
                            @if (Model.PK_VehicleTypeID == null)
                            {
                                <input type="submit" class="btn btn-success" value="Save" name="SaveVehicleType" onclick="return fvalidate();" />
                            }
                            else
                            {
                                <input type="submit" class="btn btn-success" value="Update" name="UpdateVehicleType" onclick="return fvalidate();" />
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

}

<script>

    function fvalidate() {
        $(".errortext").removeClass('errortext');
        if ($("#VehicleType").val() == "") {
            $("#VehicleType").addClass('errortext');
            $("#VehicleType").focus();
            return false;
        }
    }
</script>

