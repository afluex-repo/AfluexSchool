@model AfluexSchool.Models.DashBoard

@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_ParentLayout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-xl-4 col-xxl-5 col-lg-5">
            <div class="row">
                @if (Model != null)
                {
                    if (Model.lststudent != null)
                    {
                        foreach (var item in Model.lststudent)
                        {
                        <div class="col-lg-6"  onclick="return getstudentdetails('@item.DateOfBirth','@item.Gender','@item.Mobile','@item.AadhaarCard','@item.PermanentAddress','@item.CorrespondenceAddress','@item.FatherOcc','@item.MotherOcc','@item.RegistrationNo','@item.ClassName','@item.SectionName')">


                            <div class="card shadow rounded">
                                <div class="text-center p-3 overlay-box" style="background-image: url(images/big/img1.jpg);">
                                    <div class="profile-photo">
                                        <img src="../..@item.ImagePath" width="100" class="img-fluid rounded-circle" alt="">
                                    </div>
                                    <h3 class="mt-3 mb-0 text-white" style="font-size:17px">@item.Name</h3>
                                    <p class="text-white mb-0">Class-@item.ClassName <br /> Section- @item.SectionName</p>
                                </div>
                                <div class="card-footer text-center border-0 mt-0">
                                    <a  class="btn btn-primary btn-rounded px-4" href="#" onclick="return getstudentdetails('@item.DateOfBirth','@item.Gender','@item.Mobile','@item.AadhaarCard','@item.PermanentAddress','@item.CorrespondenceAddress','@item.FatherOcc','@item.MotherOcc','@item.RegistrationNo','@item.ClassName','@item.SectionName')" class="mb-0 text-template-primary-light">View Details</a>
                                </div>
                            </div>
                        </div>
                        }
                    }
                }
            </div>
        </div>
      
        <div class="col-xl-8 col-xxl-7 col-lg-7">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="card-title"><b>PERSONAL DETAILS</b></h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>Birth Date</label>
                                <p id="DateOfBirth"></p>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>Gender</label>
                                <p id="Gender"></p>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>Mobile</label>
                                <p id="Mobile"></p>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>Aadhaar Card</label>
                                <p id="AadhaarCard"></p>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>Father's Occupation</label>
                                <p id="FatherOcc"></p>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>Mother's Occupation</label>
                                <p id="MotherOcc"></p>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>Registration No</label>
                                <p id="RegistrationNo"></p>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>Class</label>
                                <p id="ClassName"></p>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>Section</label>
                                <p id="SectionName"></p>
                            </div>
                        </div>
                        <div class="col-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label>Permanent Address</label>
                                <p id="PermanentAddress"></p>
                            </div>
                        </div>
                        <div class="col-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label>Correspondence Address</label>
                                <p id="CorrespondenceAddress"></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-12">
            <div class="card shadow">
                <div class="card-body">
                    <div class="card-title font-weight-bold"><h3><b>Notice</b></h3></div>
                    <table id="example5" class="display">
                        <thead>
                            <tr>
                                <th>Sr.No.</th>
                                <th>Class Name</th>
                                <th>Section</th>
                                <th>Notice Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstteacher != null)
                                {
                                    var i = 1;
                                    foreach (var item in Model.lstteacher)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.ClassName</td>
                                            <td>@item.SectionName</td>
                                            <td>@item.Notice</td>

                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

</div>
<script>
    function getstudentdetails(DateOfBirth, Gender, Mobile, AadhaarCard, PermanentAddress, CorrespondenceAddress, FatherOcc, MotherOcc, RegistrationNo, ClassName, SectionName)
    {
        $('#DateOfBirth').text(DateOfBirth);
        $('#Gender').text(Gender);
        $('#Mobile').text(Mobile);
        $('#AadhaarCard').text(AadhaarCard);
        $('#PermanentAddress').text(PermanentAddress);
        $('#CorrespondenceAddress').text(CorrespondenceAddress);
        $('#FatherOcc').text(FatherOcc);
        $('#MotherOcc').text(MotherOcc);
        $('#RegistrationNo').text(RegistrationNo);
        $('#ClassName').text(ClassName);
        $('#SectionName').text(SectionName);
    }
</script>