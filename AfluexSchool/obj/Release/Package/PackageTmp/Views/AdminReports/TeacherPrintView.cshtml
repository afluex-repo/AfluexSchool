@model AfluexSchool.Models.Teacher

@{
    Layout = null;
}

 <!DOCTYPE html>

<html>
<head>
    <title>TeacherPrintView</title>
</head>
<body>
    @using (Html.BeginForm("TeacherPrintView", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
    {
        <div>
            <table style="width:100%" border="0">
                <tr style="font-size:30px">

                    <th colspan="5" style="padding:20px">Teacher Details</th>


                </tr>
            </table>
            <div id="printDiv"> <input type="button" onclick="printreport();" value="Print" /></div>
            <hr style="margin:30px" />
            <table style="width:100%" border="0">
                <tr style="height:30px">
                    @Html.HiddenFor(r => r.PK_TeacherID)
                    <th>LoginID</th>
                    <td>@ViewBag.LoginID</td>
                    <th>Teacher Name</th>
                    <td>@ViewBag.Name</td>
                    <td><img src="@ViewBag.Image" width="50px" height="50px" /></td>
                </tr>

                <tr style="height:30px">
                    <th>Father Name</th>
                    <td>@ViewBag.FatherName</td>
                    <th>Date Of Birth</th>
                    <td colspan="2">@ViewBag.DOB</td>

                </tr>


                <tr style="height:30px">
                    <th>Gender</th>
                    <td>@ViewBag.Gender</td>
                    <th>Branch Name</th>
                    <td colspan="2">@ViewBag.BranchName</td>

                </tr>

                <tr style="height:30px">

                    <th>Category</th>
                    <td>@ViewBag.Category</td>
                    <th>Religion</th>
                    <td colspan="2">@ViewBag.Religion</td>

                </tr>

                <tr style="height:30px">
                    <th>Qualification</th>
                    <td>@ViewBag.Qualification</td>
                    <th>Experience</th>
                    <td colspan="2">@ViewBag.Experience</td>
                </tr>

                <tr style="height:30px">
                    <th>LastSchool</th>
                    <td>@ViewBag.LastSchool</td>
                    <th>Last Experience</th>
                    <td colspan="2">@ViewBag.LastExperience</td>
                </tr>

                <tr style="height:30px">
                    <th>Address</th>
                    <td>@ViewBag.Address</td>
                    <th>PinCode</th>
                    <td colspan="2">@ViewBag.PinCode</td>
                </tr>

                <tr style="height:30px">
                    <th>State</th>
                    <td>@ViewBag.State</td>
                    <th> City</th>
                    <td colspan="2">@ViewBag.City</td>
                </tr>

                <tr style="height:30px">
                    <th>MobileNo</th>
                    <td>  @ViewBag.MobileNo</td>
                    <th> DOJ</th>
                    <td colspan="2">@ViewBag.DOJ</td>
                </tr>

                <tr style="height:30px">
                    <th>EmailID</th>
                    <td colspan="2">@ViewBag.EmailID</td>

                </tr>
            </table>
        </div>
    }
    <script>
        //function printDiv(divName) {
        //    var printContents = document.getElementById(divName).innerHTML;
        //    var originalContents = document.body.innerHTML;

        //    document.body.innerHTML = printContents;

        //    window.print();

        //    document.body.innerHTML = originalContents;
        //}
        function printreport()
        {

            var printButton = document.getElementById("printDiv");
            printButton.style.visibility = 'hidden';
            window.print()
            printButton.style.visibility = 'visible';
        }
    </script>
</body>

</html>
