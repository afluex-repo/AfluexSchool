@model AfluexSchool.Models.Parent

@{
    ViewBag.Title = "ParentReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 <style>
    @@page {
        size: auto;
    }

    @@media print {
        table td:last-child {
            display: none;
        }

        table th:last-child {
            display: none;
        }
    }
</style>
@using (Html.BeginForm("ParentReport", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{


    <div>
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header border-0 bg-none">
                <div class="row">
                    <div class="col-12 col-md">
                        <p class="fs15">Parent Report</p>
                    </div>
                    
                </div>
            </div>
            <div class="card-body ">


                <div class="row">
                    <div class="col-md-3">
                        Login ID
                        @Html.TextBoxFor(m => m.LoginID, new { @class = "form-control", placeholder = "Login ID" })
                    </div>
                    <div class="col-md-3">
                        Parent Name
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Parent Name" })
                    </div>
                    <div class="col-md-3">
                        Date Of Joining
                        @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", placeholder = "From Date", @ReadOnly = "ReadOnly" })
                    </div>
                    <div class="col-md-3">
                        Date Of Joining
                        @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", placeholder = "To Date", @ReadOnly = "ReadOnly" })
                    </div>

                </div>
                <div class="card-footer text-left">
                    <div class="col-md-3" style="margin-top:20px">
                        <input type="submit" value="Search" name="btnSearch" id="btnSearch" class="btn btn-primary" />
                    </div>
                </div>
                <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <div class="row"><div class="col-sm-12 col-md-6"></div><div class="col-sm-12 col-md-6"></div></div><div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered w-100 mb-0" id="example23">
                                <thead>
                                    <tr>

                                        <th>S.no</th>
                                        <th>Parent LoginID</th>
                                        <th>Parent Name</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Address</th>
                                        <th>Pincode</th>
                                        <th>Joining Date</th>
                                        <th>State</th>
                                        <th>City</th>
                                        <th>Action</th>

                                    </tr>

                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.listparent != null)
                                        {
                                            int i = 1;
                                            foreach (var item in Model.listparent)
                                            {

                                                <tr>
                                                    <td>
                                                        @i

                                                    </td>
                                                    <td>
                                                        @item.ParentLogin_ID
                                                    </td>
                                                    <td>
                                                        @item.ParentName
                                                    </td>
                                                    <td>
                                                        @item.Email
                                                    </td>
                                                    <td>
                                                        @item.Mobile
                                                    </td>
                                                    <td>
                                                        @item.Address
                                                    </td>
                                                    <td>
                                                        @item.PinCode
                                                    </td>
                                                    <td>
                                                        @item.AddedOn
                                                    </td>
                                                    <td>
                                                        @item.State
                                                    </td>
                                                    <td>
                                                        @item.City
                                                    </td>
                                                    <td>
                                                        <a href="/AdminReports/ParentViewProfile?Pk_ParentID=@item.Pk_ParentID" class="btn btn-success btn-sm">View </a>
                                                        <a href="/AdminReports/ParentPrintView?Pk_ParentID=@item.Pk_ParentID" class="btn btn-info btn-sm">Print</a>

                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                            <div class="j-response"></div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>


}

<script src="../../scripts/jquery-1.10.2.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment-with-locales.min.js"></script>


<script>
    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });


    });

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
    });

    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
    }
);


</script>

